    {
      "label": "Kill Yoto Server processes",
      "type": "shell",
      "command": "taskkill",
      "args": [
        "/F",
        "/IM",
        "python.exe"
      ],
      "windows": {
        "command": "taskkill",
        "args": [
          "/F",
          "/IM",
          "python.exe"
        ]
      },
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
