{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Yoto Server (with reload)",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "python",
        "src/yoto_up_server/cli.py",
        "--reload",
        "--no-browser"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*Uvicorn running on.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Uvicorn running.*$",
          "endsPattern": "^.*Application startup complete.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      },
      "runOptions": {
        "instanceLimit": 1,
        "reevaluateOnRerun": true
      }
    },
    {
