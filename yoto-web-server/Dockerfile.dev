# Development Dockerfile
FROM ghcr.io/astral-sh/uv:python3.13-bookworm-slim

WORKDIR /app

# Enable bytecode compilation and copy mode
ENV UV_COMPILE_BYTECODE=1
ENV UV_LINK_MODE=copy

# Install system dependencies (curl for healthcheck)
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy project definition files
COPY pyproject.toml uv.lock ./

# Install dependencies
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen --no-install-project

# Copy the project source code
COPY README.md ./
COPY src/ ./src/

# Install the project in editable mode
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen

# Set environment variables
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONUNBUFFERED=1
ENV YOTO_WEB_HOST=0.0.0.0
ENV YOTO_WEB_PORT=8000
ENV YOTO_WEB_DEBUG=true
ENV CACHE_DIR=/app/cache
ENV DATA_DIR=/app/data

# Expose port
EXPOSE 8000

# Run with hot reload
# We use uv run to ensure we're using the environment, 
# though PATH is already set so python would also work.
CMD ["uv", "run", "yoto-server", "serve", "--reload", "--no-browser"]
