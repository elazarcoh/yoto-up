{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Server (with reload)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "yoto-server",
                "serve",
                "--reload"
            ],
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting.*",
                    "endsPattern": "^.*Uvicorn running.*"
                }
            }
        },
        {
            "label": "Start Server (no reload)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "yoto-server",
                "serve",    
                "--no-reload"
            ],
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true
            }
        },
        {
            "label": "Start Server (debug mode)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "yoto-server",
                "serve",
                "--reload",
                "--debug"
            ],
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "uv",
            "args": ["run", "pytest", "-v"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Type Check",
            "type": "shell",
            "command": "uv",
            "args": ["run", "mypy", "src/yoto_web_server"],
            "group": "build"
        },
        {
            "label": "Lint",
            "type": "shell",
            "command": "uv",
            "args": ["run", "ruff", "check", "src/yoto_web_server"],
            "group": "build"
        },
        {
            "label": "Format",
            "type": "shell",
            "command": "uv",
            "args": ["run", "ruff", "format", "src/yoto_web_server"],
            "group": "build"
        }
    ]
}
