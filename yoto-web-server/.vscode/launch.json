{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Yoto Web Server (Debug)",
            "type": "debugpy",
            "request": "launch",
            "module": "yoto_web_server.cli",
            "args": ["serve","--reload", "--debug", "--no-browser"],
            "cwd": "${workspaceFolder}",
            "env": {
                "YOTO_WEB_DEBUG": "true"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
